<resources>

    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppDialogTheme" parent="android:Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
    </style>

</resources>
