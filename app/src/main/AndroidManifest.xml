<manifest
    package="com.jeon.android.launchitup"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".LaunchItUpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch_it_up"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LauncherActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@style/TransparentAppTheme">

            <meta-data
                android:name="com.android.systemui.action_assist_icon"
                android:resource="@mipmap/ic_launch_it_up" />

            <intent-filter>
                <action android:name="android.intent.action.ASSIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AppChooseDialogActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppDialogTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
